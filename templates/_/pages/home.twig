{% extends "_/layouts/base" %}

{% block content %}
	<h1>Kortkijk Film Festival</h1>
	<p>
		{{ entry.paragraph}}
	</p>
	<section class="container__countdown">
			{% include "_/components/countdown.twig" %}
	</section>
	<section class="container__archive">
		<h2>Kortkijk Archive</h2>
		<a href="/{{('films') }}" class="btn__archive">Show all films</a>
		 {% for film in craft.entries.section('films').limit(3).all()%}
		<article class="archive__card">
			<img class="card__img">
			<div>
				<h3 class="card__title">{{film.title}}</h3>
				<p class="card__paragraph"> {{film.paragraph}} </p>
				<p class="card__year">{{film.year}}</p>
				<p class="card__theme">{{film.theme}}</p>
				<a href="/films/{{film.slug}}" class="btn__card">See more</a>
			</div>
  	</article>
		 {% endfor %}
	{# 	{% include "_/components/film-card.twig" %} #}
	</section>
{% endblock %}
